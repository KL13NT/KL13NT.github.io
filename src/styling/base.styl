@import './settings.styl'

body, html, *
	box-sizing border-box
	padding 0
	margin 0
	font-display swap

body 
	font 112.5%/1.55 'Roboto',sans-serif
	font-weight 400
	color rgb(34, 36, 38)

html 
	font-size 16px
	border solid 6px #e8b700
	background #f3f7f9

header, footer 
	width 100%
	height 100vh


nav{
  display flex
  flex-direction row
  align-items center
  position absolute 
  top 2rem
  right 2rem
}

a, button{
	text-decoration: none
	outline none
  border none
  background transparent
  text-decoration none
  color $base
  transition color 0.2s, transform 0.2s
} 


a:hover, a:focus{
  transform translateY(-3px)
  color #ffca00

}

form
	text-align left

header p{
  line-height: .7;
  color: #222;
}

ul{
  font-family: 'Lato', Arial, sans-serif;
}


@import './settings.styl'

p, a, ol, ul
  font-size 1rem

h1
  font-size 2.6rem

a, button
  text-decoration: none
  outline none
  border none
  background transparent
  transition transform 0.2s
  color #9e003a
  cursor pointer

form
  text-align left

header p
  line-height: .7;
  color: #222;

body, html
  box-sizing border-box
  margin 0
  padding 0
  background #f3f7f9
  color rgb(34, 36, 38)
  font-family "Roboto","-apple-system","BlinkMacSystemFont","Segoe UI","Helvetica","Arial","sans-serif","Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol"
  font-size 1.25rem
  font-weight 400
  line-height 1.6rem
  word-wrap: break-word
  text-rendering optimizeLegibility
  font-display swap

html 
  border solid 6px #e8b700
  min-height 100%

h5 
	color rgba(0,0,0,0.8)

p 
  color rgba(0,0,0,0.5)
  font-family inherit

img 
	margin 0 auto
	display block

ul 
	letter-spacing 0.9
	font-weight 400
	color #555
	margin 0 1rem

li
	margin 1rem 0

*::selection 
	background #ffca00

blockquote 
	padding 30px
	position relative
	& > p > span 
    --x-height-multiplier 0.342
    --baseline-multiplier 0.22
    font-weight 400
    font-style italic
    line-height 1.48
    letter-spacing -.012em
    background rgba(12,242,143,.2)
    position relative
    font-size 1.3rem
	&::before 
		content "\201C"
		font-family Arial, serif
		font-weight bold
		color #999
		position absolute
		left -5px
		top 5px
		font-size 5rem
section 
	& > p > span 
    text-align center
    margin 0 auto
    display block
    margin 6px
    color rgba(0,0,0,.5)


code
  overflow auto


a
  display inline-block
  background-image linear-gradient(transparent 0%, transparent calc(50% - 8px), #e8b700a3 calc(50% - 8px), #e8b700a3 100% )
  transition background-position 120ms ease-in-out, padding 120ms ease-in-out
  background-size 100% 200%
  background-position 0 0
  &:hover, &:focus
    transform unset
    background-image: linear-gradient( transparent 0%, transparent calc(50% - 8px), #e8b700 calc(50% - 8px), #e8b700 100% )
    background-position: 0 100%